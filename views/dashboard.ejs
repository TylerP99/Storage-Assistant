<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/view.css">
</head>
<body>

    <%- include("./partials/navbar.ejs") %>

    <main>

        <header>
            <h1>Storage Locations</h1>
        </header>

        <section>
            <section class="options">
                <section>
                    <button class="create-location-button">Create New Location</button>
                    <form class="create-location-form hidden" action="/api/storage/create/StorageLocation" method="POST">
    
                        <h2>Create New Location</h2>
                        
                        <section>
                            <label for="name">Name:</label>
                            <input type="text" id="location-name" name="name" placeholder="Enter name here" required>
                        </section>
                
                        <section>
                            <label for="description">Description:</label>
                            <input type="text" id="location-description" name="description" placeholder="Enter description here" required>
                        </section>
                
                        <section>
                            <label for="length">Length:</label>
                            <input type="text" id="location-length" name="length" placeholder="Enter length here" required>
                        </section>
                
                        <section>
                            <label for="width">Width:</label>
                            <input type="text" id="location-width" name="width" placeholder="Enter width here" required>
                        </section>
                
                        <section>
                            <label for="height">Height:</label>
                            <input type="text" id="location-height" name="height" placeholder="Enter height here" required>
                        </section>
                
                        <section>
                            <button type="submit">Create</button>
                            <button type="reset">Reset</button>
                        </section>
    
                    </form>
                </section>
            </section>

            <section>
                <% if(locations) { %>
                    <section class="location-display">
                        <%- include("./partials/location-card-simple.ejs")%>
                    </section>
                <% }else{ %>
                    <h6>No containers found</h6>
                <% } %>
            </section>
        </section>

    </main>
<script src="/js/dashboard.js"></script>
<script src="/js/logout.js"></script>
</body>
</html>