<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=container.name%></title>

    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/view.css">
</head>
<body id="<%=container.id%>">

    <!-- Logo at top -->

    <!-- Nav at top on webpage version, hidden with button on mobile probably -->
    <%- include("./partials/navbar.ejs") %>

    <!-- Dynamic Contents -->
    <main>
        <!-- Route to container ending with underlined name of container, routes are hrefs to other containers -->
        <section>
            <a class="back-button" href="/<%=container.parent.type%>/<%=container.parent.id%>">Back to Parent</a>

            <h1><%=container.name%></h1>
        </section>

        <!-- Container operations -->
        <section class="options">
            <!-- Button will open a card in the center of the screen with relevant form -->
            <section>
                <button class="edit-container-button">Edit</button>
                <form class="edit-container-form hidden" action="/api/storage/update/container" method="PUT">

                    <section>
                        <label for="name">Name:</label>
                        <input type="text" id="container-name-update" name="name" placeholder="Enter updated name here" value="<%=container.name%>" required>
                    </section>

                    <section>
                        <label for="description">Description:</label>
                        <input type="text" id="container-description-update" name="description" placeholder="Enter updated description here" value="<%=container.description%>" required>
                    </section>

                    <section>
                        <label for="length">Length:</label>
                        <input type="text" id="container-length-update" name="length" placeholder="Enter updated length here" value="<%=container.length%>" required>
                    </section>

                    <section>
                        <label for="width">Width:</label>
                        <input type="text" id="container-width-update" name="width" placeholder="Enter updated width here" value="<%=container.width%>" required>
                    </section>

                    <section>
                        <label for="height">Height:</label>
                        <input type="text" id="container-height-update" name="height" placeholder="Enter updated height here" value="<%=container.height%>" required>
                    </section>

                    <section>
                        <button type="submit">Edit</button>
                        <button type="reset">Reset</button>
                    </section>

                </form>
            </section>

            <section>
                <button class="move-container-button">Move</button>
                <form class="move-container-form hidden" action="/api/storage/move/container" method="PUT">

                    <section>
                        <label for="destinations">Choose a new location or container for this container</label>
                        <select>
                            <!--Later-->
                        </select>
                    </section>

                    <section>
                        <button type="submit">Edit</button>
                        <button type="reset">Reset</button>
                    </section>

                </form>
            </section>

            <section>
                <button class="delete-container-button">Delete</button>
                <form class="delete-container-form hidden">
                    <h2>Are you sure you want to delete this container and its contents?</h2>

                    <button type="submit">Delete</button>
                </form>
            </section>
        </section>

        <!-- Container Information -->
        <section class="options">
            <p><%=container.length%> x <%=container.width%> x <%=container.height%></p>
            <p><%=container.description%></p>
        </section>

        <!-- Container contents with simple cards that link to child page with add button -->
        <section>
            <h2>Contents</h2>
            <section>
                <h3>Containers</h3>

                <section class="options">
                    <section>
                        <button class="add-container-button">Add new</button>
                        <form id="container" class="add-container-to-container-form hidden" action="/api/storage/add/StorageLocation" method="PUT">
                            <h2>Add container to this storage location</h2>
                
                            <section>
                                <label for="name">Name:</label>
                                <input type="text" id="container-name" name="name" placeholder="Enter name here" required>
                            </section>
                
                            <section>
                                <label for="description">Description:</label>
                                <input type="text" id="container-description" name="description" placeholder="Enter description here" required>
                            </section>
                
                            <section>
                                <label for="length">Length:</label>
                                <input type="text" id="container-length" name="length" placeholder="Enter length here" required>
                            </section>
                
                            <section>
                                <label for="width">Width:</label>
                                <input type="text" id="container-width" name="width" placeholder="Enter width here" required>
                            </section>
                
                            <section>
                                <label for="height">Height:</label>
                                <input type="text" id="container-height" name="height" placeholder="Enter height here" required>
                            </section>
                
                            <section>
                                <button type="submit">Create</button>
                                <button type="reset">Reset</button>
                            </section>
                        </form>
                    </section>
                </section>

                <section>
                    <% if(containers.length > 0) { %>
                        <section class="container-display">
                            <%- include("./partials/container-card-simple.ejs") %>
                        </section>
                    <% }else{ %>
                        <h6>No containers found</h6>
                    <% } %>
                </section>
            </section>

            <section>
                <h3>Items</h3>

                <section class="options">
                    <section>
                        <button class="add-item-button">Add new</button>
                        <form id="item" class="add-item-to-container-form hidden" action="/api/storage/add/StorageLocation" method="PUT">
                            <h2>Add item to this storage location</h2>
                
                            <section>
                                <label for="name">Name:</label>
                                <input type="text" id="item-name" name="name" placeholder="Enter name here" required>
                            </section>
                
                            <section>
                                <label for="description">Description:</label>
                                <input type="text" id="item-description" name="description" placeholder="Enter description here" required>
                            </section>
        
                            <section>
                                <label for="quantity">Quantity:</label>
                                <input type="text" id="item-quantity" name="name" placeholder="Enter quantity here" required>
                            </section>
        
                            <section>
                                <label for="value">Estimated Value:</label>
                                <input type="text" id="item-value" name="value" placeholder="Enter value here" required>
                            </section>
                
                            <section>
                                <label for="">Length:</label>
                                <input type="text" id="item-length" name="length" placeholder="Enter length here" required>
                            </section>
                
                            <section>
                                <label for="">Width:</label>
                                <input type="text" id="item-width" name="width" placeholder="Enter width here" required>
                            </section>
                
                            <section>
                                <label for="">Height:</label>
                                <input type="text" id="item-height" name="height" placeholder="Enter height here" required>
                            </section>
                
                            <section>
                                <button type="submit">Create</button>
                                <button type="reset">Reset</button>
                            </section>
                        </form>
                    </section>
                </section>

                <section>
                    <% if(items.length > 0) { %>
                        <section class="item-display">
                            <%- include("./partials/item-card-simple.ejs") %>
                        </section>
                    <% }else{ %>
                        <h6>No items found</h6>
                    <% } %>
                </section>
            </section>

        </section>
    </main>
    
<script src="/js/container-view.js"></script>
<script src="/js/logout.js"></script>
</body>
</html>